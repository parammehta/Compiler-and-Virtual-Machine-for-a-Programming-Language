grammar Demo;

program
	: (statement ';')+;

statement
	: println
	| varAssignment
	;

expression
	: left=expression '/' right=expression #DIV
	| left=expression '*' right=expression #MULT
	| left=expression '+' right=expression #PLUS
	| left=expression '-' right=expression #MINUS
	| num=NUM #Number
	| varName=NAME #Variable
	;
	
assignment: NAME '=' 

varAssignment
	: 'int' NAME ;

println
	: 'println(' argument=expression ')' ;

NAME
	: [a-zA-Z][a-zA-Z0-9]*;

NUM
	: [0-9]+;

WHITESPACE
	: [ \t\n\r]+ -> skip;